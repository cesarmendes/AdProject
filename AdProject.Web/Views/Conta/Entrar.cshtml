@using AdProject.Web.Resources

@model AdProject.Web.Models.EntrarViewModel

@{
    ViewData["Title"] = "Login";
}

@Html.Partial("~/Views/_HeaderLogo.cshtml")

<div class="container">
    <div class="row justify-content-center">
        <div class="col-12 col-md-6 col-lg-5 col-xl-4 border border-green-dark rounded shadown-green-dark p-2 mb-5">
            <h5 class="text-center text-purple">Minha conta</h5>
            <form asp-action="Entrar" asp-controller="Conta" asp-antiforgery="true" method="post" class="mt-3">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <input asp-for="Email" class="form-control" placeholder="@TextResource.Email" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input asp-for="Senha" type="password" class="form-control" placeholder="@TextResource.Password" />
                    <span asp-validation-for="Senha" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="checkbox" asp-for="ManterConectado" />
                    <label asp-for="ManterConectado" class="text-purple"></label>
                    <span asp-validation-for="ManterConectado" class="text-danger"></span>
                    <a asp-action="ForgotPassword" asp-controller="Account" class="float-right">Esqueci a senha</a>
                </div>
                <div class="form-group">
                    <input type="submit" value="@TextResource.Login" class="btn btn-purple btn-block" />
                </div>
            </form>
            <a asp-action="Register" asp-controller="Account" class="text-center">@TextResource.Register</a>
            <hr class="bg-purple" />
            <h5 class="text-center text-purple">Redes sociais</h5>
            <button class="btn btn-primary btn-block text-left">
                <span class="fa fa-facebook"></span> Login com Facebook
            </button>
            <button class="btn btn-danger btn-block text-left">
                <span class="fa fa-google"></span> Login com Google
            </button>
        </div>
    </div>
</div>



<link href="~/lib/iCheck/skins/square/green.css" rel="stylesheet" />

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}


    <link href="~/lib/iCheck/skins/square/green.css" rel="stylesheet" />
    <script src="~/lib/iCheck/icheck.min.js" type="text/javascript"></script>
    <script type="text/javascript">
        $(document).ready(function () {
            $('input').iCheck({
                checkboxClass: 'icheckbox_square-green',
                radioClass: 'iradio_square',
                increaseArea: '20%' // optional
            });
        });
    </script>
}
