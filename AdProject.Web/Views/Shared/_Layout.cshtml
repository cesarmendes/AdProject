<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - AdProject.Web</title>

    <environment include="Development">
        <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" />
        <link rel="stylesheet" href="~/lib/font-awesome/css/font-awesome.css" />
        <link rel="stylesheet" href="~/css/site.css" />
    </environment>
    <environment exclude="Development">
        <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" asp-append-version="true" />
        <link rel="stylesheet" href="~/lib/font-awesome/css/font-awesome.css" asp-append-version="true" />
        <link rel="stylesheet" href="~/css/site.min.css" asp-append-version="true" />
    </environment>
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-light bg-green">
        <a class="navbar-brand text-white ml-3" asp-controller="Site" asp-action="Index">
            <span class="fa fa-amazon fa-2x"></span>
        </a>
        <button class="navbar-toggler  text-white" type="button" data-toggle="collapse" data-target="#navbarNavAltMarkup" aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
            <ul class="navbar-nav">
                <li class="nav-item">
                    <a class="nav-link text-white" asp-area="" asp-controller="Site" asp-action="Index">Home</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link text-white" asp-area="" asp-controller="Site" asp-action="About">About</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link text-white" asp-area="" asp-controller="Site" asp-action="Contact">Contact</a>
                </li>
            </ul>
            <ul class="navbar-nav ml-auto">
                <li class="nav-item">
                    <a class="nav-link text-white" asp-area="" asp-controller="Site" asp-action="Index">Login</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link text-white" asp-area="" asp-controller="Site" asp-action="About">Cadastro</a>
                </li>
            </ul>
        </div>
    </nav>
    <div class="col-xl-12" style="min-height:65vh">
        @RenderBody()
    </div>

    <footer class="bg-green col-xl-12">
        <div class="row">
            <div class="col-md-3 col-lg-3 col-xl-3">
                <h4 class="text-white mt-3">Aplicativos</h4>
                <hr class="bg-white" />
                <ul class="list-unstyled">
                    <li>
                        <a class="btn btn-link text-white" href="https://play.google.com/">
                            <span class="fa fa-android fa-2x"></span> para android
                        </a>
                    </li>
                    <li>
                        <a class="btn btn-link text-white" href="https://www.apple.com/br/ios/app-store/">
                            <span class="fa fa-apple fa-2x"></span> para ios
                        </a>
                    </li>
                    <li>
                        <a class="btn btn-link text-white" href="https://www.microsoft.com/pt-br/store/b/home">
                            <span class="fa fa-windows fa-2x"></span> para windows
                        </a>
                    </li>
                </ul>
            </div>
            <div class="col-md-3 col-lg-3 col-xl-3">
                <h4 class="text-white mt-3">Nossos canais</h4>
                <hr class="bg-white" />
                <ul class="list-unstyled">
                    <li>
                        <a class="btn btn-link text-white" href="https://facebook.com">
                            <span class="fa fa-facebook-official fa-2x"></span> facebook.com/empresa
                        </a>
                    </li>
                    <li>
                        <a class="btn btn-link text-white" href="https://twitter.com">
                            <span class="fa fa-twitter fa-2x"></span> twitter.com/empresa
                        </a>
                    </li>
                    <li>
                        <a class="btn btn-link text-white" href="https://instagram.com">
                            <span class="fa fa-instagram fa-2x"></span> instagram.com/empresa
                        </a>
                    </li>
                </ul>
            </div>
            <div class="col-md-3 col-lg-3 col-xl-3">
                <h4 class="text-white mt-3">Links úteis</h4>
                <hr class="bg-white" />
            </div>
            <div class="col-md-3 col-lg-3 col-xl-3">
                <h4 class="text-white mt-3">Contato</h4>
                <hr class="bg-white" />
                <ul class="list-unstyled">
                    <li><a href="#" class="text-white">empresa@empresa.com</a></li>
                    <li><span class="text-white">(11) 1111-1111</span></li>
                    <li><span class="text-white">(22) 2222-2222</span></li>
                </ul>
            </div>
        </div>
        <div class="row bg-green-dark">
            <div class="col-xl-12 text-center">
                <span class="text-white">
                    &copy; 2018 -  todos os direitos reservados - Empresa X - 000.000.000/0000-00 - Rua Carlos Silva, 290 - Sala 51A - Chácara California -  São Paulo/SP
                </span>
            </div>
        </div>
    </footer>



    <environment include="Development">
        <script src="~/lib/jquery/dist/jquery.js"></script>
        <script src="~/lib/bootstrap/dist/js/bootstrap.js"></script>
        <script src="~/js/site.js"></script>
    </environment>
    <environment exclude="Development">
        <script src="~/lib/jquery/dist/jquery.min.js" asp-append-version="true"></script>
        <script src="~/lib/bootstrap/dist/js/bootstrap.min.js" asp-append-version="true"></script>
        <script src="~/js/site.min.js" asp-append-version="true"></script>
    </environment>

    @RenderSection("Scripts", required: false)
</body>
</html>
