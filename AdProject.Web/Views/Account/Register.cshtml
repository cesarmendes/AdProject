@using AdProject.Web.Resources

@model AdProject.Web.Models.RegisterViewModel

@{
    ViewData["Title"] = "Register";
}

@section beforecontainer{
    @Html.Partial("~/Views/_HeaderLogo.cshtml")
}

<div class="row justify-content-center">
    <div class="col-12 col-md-6 col-lg-5 col-xl-4 border border-green-dark rounded shadown-green-dark p-2 mb-5">
        <form asp-action="Register" class="mt-3">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <input asp-for="Name" class="form-control" placeholder="@TextResource.Name" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input asp-for="Email" class="form-control" placeholder="@TextResource.Email" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input asp-for="Password" type="password" class="form-control" placeholder="@TextResource.Password" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input asp-for="PasswordConfirm" type="password" class="form-control" placeholder="@TextResource.PasswordConfirm" />
                <span asp-validation-for="PasswordConfirm" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="checkbox" class="" />
            </div>
            <div class="form-group">
                <input type="submit" value="@TextResource.Register" class="btn btn-purple btn-block float-right" />
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}

    <link href="~/lib/iCheck/skins/square/green.css" rel="stylesheet" />
    <script src="~/lib/iCheck/icheck.min.js" type="text/javascript"></script>
    <script type="text/javascript">
        $(document).ready(function () {
            $('input').iCheck({
                checkboxClass: 'icheckbox_square-green',
                radioClass: 'iradio_square',
                increaseArea: '20%' // optional
            });
        });
    </script>
}
