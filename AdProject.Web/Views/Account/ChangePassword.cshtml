@using AdProject.Web.Resources

@model AdProject.Web.Models.ChangePasswordViewModel


@Html.Partial("~/Views/_HeaderLogo.cshtml")
<div class="container">
    <div class="row justify-content-center">
        <div class="col-12 col-md-6 col-lg-5 col-xl-4 border border-green-dark rounded shadown-green-dark p-2 mb-5">
            <h5 class="text-center text-purple">Atualizar senha</h5>
            <form asp-action="ChangePassword" asp-antiforgery="true" method="post" class="mt-3">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <input asp-for="PasswordCurrent" type="password" class="form-control" placeholder="@TextResource.PasswordCurrent" />
                    <span asp-validation-for="PasswordCurrent" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input asp-for="Password" type="password" class="form-control" placeholder="@TextResource.Password" />
                    <span asp-validation-for="Password" class="text-danger" placeholder="@TextResource.Password"></span>
                </div>
                <div class="form-group">
                    <input asp-for="PasswordConfirm" type="password" class="form-control"  placeholder="@TextResource.PasswordConfirm"/>
                    <span asp-validation-for="PasswordConfirm" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="@TextResource.Change" class="btn btn-purple pull-right" />
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}


