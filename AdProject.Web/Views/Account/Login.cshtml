@using AdProject.Web.Resources

@model AdProject.Web.Models.LoginViewModel

@{
    ViewData["Title"] = "Login";
}

<h3 class="text-center text-purple"><span class="fa fa-amazon fa-2x"></span></h3>
<h2 class="text-center text-purple text-logo">Ads</h2>
<p class="text-center text-purple text-logo">Lorem ipsum dolor sit amet, consectetur adipiscing elit</p>
<hr class="bg-purple" />

<div class="row justify-content-center">
    <div class="col-md-4 col-lg-3 col-xl-3">
        <form asp-action="Login" class="mt-3 p-2">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <input asp-for="Email" class="form-control" placeholder="@TextResource.Email" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input asp-for="Password" type="password" class="form-control" placeholder="@TextResource.Password" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="@TextResource.Login" class="btn btn-purple float-right" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
