@using AdProject.Web.Resources

@model AdProject.Web.Models.LoginViewModel

@{
    ViewData["Title"] = "Login";
}

@section beforecontainer{
    @Html.Partial("~/Views/_HeaderLogo.cshtml")
}

<div class="row justify-content-center">
    <div class="col-12 col-md-6 col-lg-5 col-xl-4 border border-green-dark rounded shadown-green-dark">
        <form asp-action="Login" class="mt-3 p-2">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <input asp-for="Email" class="form-control" placeholder="@TextResource.Email" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input asp-for="Password" type="password" class="form-control" placeholder="@TextResource.Password" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="checkbox" asp-for="RememberMe" />
                <label asp-for="RememberMe" class="text-purple"></label>
                <input type="submit" value="@TextResource.Login" class="btn btn-purple float-right" />
            </div>
        </form>

        <hr />
    </div>
</div>


<link href="~/lib/iCheck/skins/square/green.css" rel="stylesheet" />

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}


    <script src="~/lib/iCheck/icheck.min.js" type="text/javascript"></script>
    <script type="text/javascript">
        $(document).ready(function () {
            $('input').iCheck({
                checkboxClass: 'icheckbox_square',
                radioClass: 'iradio_square',
                increaseArea: '20%' // optional
            });
        });
    </script>
}
