@using AdProject.Web.Resources

@model AdProject.Web.Models.LoginViewModel

@{
    ViewData["Title"] = "Login";
}

@Html.Partial("~/Views/_HeaderLogo.cshtml")

<div class="row justify-content-center">
    <div class="col-10 col-md-4 col-lg-3 col-xl-3 border border-green-dark rounded shadown-green-dark">
        <form asp-action="Login" class="mt-3 p-2">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <input asp-for="Email" class="form-control" placeholder="@TextResource.Email" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input asp-for="Password" type="password" class="form-control" placeholder="@TextResource.Password" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="checkbox" asp-for="RememberMe"/>
                <label asp-for="RememberMe" class="text-purple" ></label>
                <span asp-validation-for="RememberMe" class="text-danger"></span>
                <input type="submit" value="@TextResource.Login" class="btn btn-purple float-right" />
            </div>
        </form>

        <hr />
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>




